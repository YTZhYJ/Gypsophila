		<mapping resource="com/pytd/db/entity/hibernatexml/ClientUser.hbm.xml"/>
		<mapping resource="com/pytd/db/entity/hibernatexml/Contact.hbm.xml"/>
		<mapping resource="com/pytd/db/entity/hibernatexml/DictDepartment.hbm.xml"/>
		<mapping resource="com/pytd/db/entity/hibernatexml/DictGender.hbm.xml" />
		<mapping resource="com/pytd/db/entity/hibernatexml/DictSequence.hbm.xml" />
		<mapping resource="com/pytd/db/entity/hibernatexml/Message.hbm.xml" />
